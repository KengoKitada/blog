<div class="col-md-8">

<ul>
 <% @posts.each do |post| %>
  <li>
   <h1><%= post.title %><br></h1>
   <p><%= post.body %></p>
    <p>
        <%= link_to "続きを読む", post_path(post.id), class: 'btn btn-default' %>
      </p>
  </li>
<% end %>
</ul>
</div>

<div class="col-md-4">
 <div class="thumbnail">
    <% author = Author.first %>
    <img src="<%= author.image_url %>" alt="著者イメージ">
    <div class="caption">
      <h3><%= author.name %></h3>
      <p><%= author.description %></p>
    </div>
  </div>
</div>


